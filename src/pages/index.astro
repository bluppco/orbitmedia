			<Hero data={ home_data.hero } />
		</section>
		<section class="flex flex-col gap-12 md:gap-32 py-12 md:py-32 bg-om_zinc">
			<RecentProjects data={ home_data.recent_projects }/>
			<CofounderTalk data={ home_data.cofounder_talk } />
			<PartnerWithUs data={ home_data.partner_with_us } />
			<Reviews data={ home_data.reviews } />
			<Awards data={ home_data.awards } />
