			<OptimizeWebsite data={ home_data.optimize_website } />
			<DataDrivenCompany
				data={ home_data.data_driven_company }
				data_and_analytics={ home_data.data_and_analytics }
				keyword_research={ home_data.keyword_research }
				interview_and_investigate={ home_data.interview_and_investigate }
			/>
			<SgoTestimonials data={ testimonials } />
		</section>
		<UpdateMessaging data={ home_data.update_messaging } />
