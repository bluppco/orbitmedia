---
// IMPORTING ASTRO ATOMS
import HeadingThree from "@/atoms/headings/three/index.astro"
import Paragraph from "@/atoms/paragraph/regular/index.astro"
import ContainPicture from "@/atoms/picture/contain/index.astro"

const {

    src,
    alt,
    title,
    description

} = Astro.props
---
<div class="grid grid-cols-1 md:grid-cols-2 gap-10 bg-white rounded py-8 px-4 md:py-0 md:px-0">
    <div class="w-full aspect-[4/1] md:aspect-video">
        <ContainPicture
            src={ src }
            alt={ alt }
            image_width="200"
        />
    </div>
    <div class="flex flex-col justify-center gap-2">
        <HeadingThree>{ title }</HeadingThree>
        <Paragraph>{ description }</Paragraph>
    </div>
</div>
