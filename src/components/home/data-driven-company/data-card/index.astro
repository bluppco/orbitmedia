---

// IMPORTS ASTRO ATOMS
import PictureContain from "@/atoms/picture/contain/index.astro"
import HeadingThree from "@/atoms/headings/three/index.astro"
import Paragraph from "@/atoms/paragraph/regular/index.astro"

// GET ASTRO PROPS
const {

    alternative_text,
    CDN,
    description,
    PROJECT,
    source,
    title

} = Astro.props

---
<div class="grid grid-cols-1 md:grid-cols-2 gap-10 bg-white rounded py-8 px-8 md:py-0 md:px-0">
    <div class="w-full aspect-[4/1] md:aspect-video">
        <PictureContain
            alternative_text={ alternative_text }
            CDN={ CDN }
            image_width="200"
            PROJECT={ PROJECT }
            source={ source }
        />
    </div>
    <div class="flex flex-col justify-center gap-2">
        <HeadingThree>{ title }</HeadingThree>
        <Paragraph>{ description }</Paragraph>
    </div>
</div>
