---
// IMPORTS CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../constants/image"

// IMPORTS ASTRO ATOMS
import HeadingTwo from "../../atoms/heading/two/Vanilla.astro"
import Paragraph from "../../atoms/paragraph/Vanilla.astro"

const {

    sub_title,
    title,
    description,
    src,
    alt

} = Astro.props
---
<div class="grid grid-cols-5 gap-20">
    <div class="flex flex-col justify-center gap-6 col-span-2">
        <HeadingTwo>{ title }</HeadingTwo>
        <div class="space-y-1">
            <div class="h-[2px] w-14 bg-om_red"></div>
            <div class="h-[2px] w-14 bg-om_red"></div>
        </div>
        <p class="text-2xl font-bold font-proxima_nova">{ sub_title }</p>
        <Paragraph>{ description }</Paragraph>
    </div>
    <div class="col-span-3 space-y-2">
        <div class="w-full aspect-video">
            <img
                src={ src }
                alt={ alt }
                class="w-full h-full"
            />
        </div>
    </div>
</div>
