---
// IMPORTING ASTRO ATOMS
import HeadingThree from "../../atoms/heading/three/Vanilla.astro"
import Paragraph from "../../atoms/paragraph/Vanilla.astro"

const {

    src,
    alt,
    title,
    description

} = Astro.props
---
<div class="grid grid-cols-2 gap-10 bg-white rounded">
    <div class="w-full aspect-[3/1]">
        <img
            src={ src }
            alt={ alt }
            class="w-full aspect-video"
        />
    </div>
    <div class="flex flex-col justify-center gap-2">
        <HeadingThree>{ title }</HeadingThree>
        <Paragraph>{ description }</Paragraph>
    </div>
</div>
