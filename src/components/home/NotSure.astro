---
import { marked } from "marked"

// IMPORTS CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../constants/image"

// IMPORTS ASTRO ATOMS
import HeadingTwo from "../../atoms/heading/two/Vanilla.astro"

// IMPORTS ASTRO LAYOUTS
import Container from "../../layouts/Container.astro"

const { data } = Astro.props

const description = marked.parse( data.description )
const sub_title = marked.parse( data.sub_title )
---
<Container>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-12 md:gap-20 py-12 md:py-32">
        <div class="md:col-span-3 flex items-center">
            <div class="w-full aspect-square">
                <img
                    src={ CDN_LINK + data.cover + "?quality=" + IMAGE_QUALITY }
                    alt={ data.title }
                    class="w-full h-full"
                />
            </div>
        </div>
        <div class="flex flex-col justify-center gap-6 md:col-span-2">
            <HeadingTwo>{ data.title }</HeadingTwo>
            <div class="space-y-1">
                <div class="h-[2px] w-14 bg-om_red"></div>
                <div class="h-[2px] w-14 bg-om_red"></div>
            </div>
            <section set:html={ sub_title } class="markdown" />
            <section set:html={ description } class="markdown" />
        </div>
    </div>
</Container>
