---

// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO ATOMS
import PictureContain from "@/atoms/picture/contain/index.astro"

// GET ASTRO PROPS
const {

    CDN,
    data,
    PROJECT

} = Astro.props

// SORTS IMAGES ARRAY
const images = data.images.sort(( a,b ) => a.order -b.order )

---
<section class="pt-12 md:pt-0">
    <Container>
        <section class="grid grid-cols-1 md:grid-cols-3 gap-10">
            {

                images.map( ( value ) => {

                    return(
                        <div class="w-full aspect-video">
                            <PictureContain
                                alternative_text=""
                                CDN={ CDN }
                                image_width="600"
                                PROJECT={ PROJECT }
                                source={ value.file }
                            />
                        </div>
                    )

                })

            }
        </section>
    </Container>
</section>
