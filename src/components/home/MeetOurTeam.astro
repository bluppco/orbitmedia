---
const { data, team } = Astro.props
import { CDN_LINK } from "../../constants/image"
---
<section>
    <section class="w-1/2 mx-auto flex flex-col gap-8">
        <h2 class="text-center font-proxima_nova_condensed font-extrabold text-6xl">{ data.title }</h2>
        <h2 class="text-center font-proxima_nova_condensed font-semibold">{ data.sub_title }</h2>
        <h2 class="text-center font-proxima_nova_condensed">{ data.description }</h2>
    </section>
    <section class="grid grid-cols-3 gap-8 mt-10">
        {

            team.map( ( item ) => {

                return (
                    <div class="bg-zinc-100">
                        <div class="w-full aspect-square">
                            <img
                                src={ CDN_LINK + item.cover }
                                class="w-full object-contain object-top"
                                alt={ "portfolio" + item.name }
                            />
                        </div>
                        <div class="p-8">
                            <h3 class="text-3xl font-proxima_nova_condensed font-extrabold">{ item.title }</h3>
                            <p>{ item.description }</p>
                        </div>
                    </div>
                )

            })

        }
    </section>
</section>