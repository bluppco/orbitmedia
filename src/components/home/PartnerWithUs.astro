---
import { marked } from "marked"

// IMPORTS CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../constants/image"

// IMPORTS ASTRO ATOMS
import HeadingTwo from "../../atoms/heading/two/Vanilla.astro"
import Paragraph from "../../atoms/paragraph/Vanilla.astro"
import CTALink from "../../atoms/CTALink.astro"

// IMPORTS ASTRO LAYOUTS
import Container from "../../layouts/Container.astro"

const { data } = Astro.props

const html = marked.parse( data.description )
---
<Container>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-20">
        <div class="col-span-3 flex items-center">
            <div class="w-full h-[600px] bg-zinc-200">
                <img
                    src={ CDN_LINK + data.cover + "?quality=" + IMAGE_QUALITY }
                    alt=""
                    class="w-full h-full"
                />
            </div>
        </div>
        <div class="flex flex-col justify-center gap-6 col-span-2">
            <HeadingTwo>{ data.title }</HeadingTwo>
            <div class="space-y-1">
                <div class="h-[2px] w-14 bg-om_red"></div>
                <div class="h-[2px] w-14 bg-om_red"></div>
            </div>
            <section set:html={ html } class="markdown" />
            <CTALink>{ data.button_text }</CTALink>
        </div>
    </div>
</Container>
