---
// IMPORT ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORT ASTRO COMPONENTS
import FooterColumnOne from "@/components/common/footer/column/one/index.astro"
import FooterColumnTwo from "@/components/common/footer/column/two/index.astro"
import FooterColumnThree from "@/components/common/footer/column/three/index.astro"
import FooterColumnFour from "@/components/common/footer/column/four/index.astro"

import { getCollection } from 'astro:content'

let footer_column_three = await getCollection('footer-column-three')
footer_column_three = footer_column_three.sort((a, b) => a.data.order - b.data.order)
footer_column_three = footer_column_three.filter( ( item ) => item.data.live )

let footer_column_four = await getCollection('footer-column-four')
footer_column_four = footer_column_four.sort((a, b) => a.data.order - b.data.order)
footer_column_four = footer_column_four.filter( ( item ) => item.data.live )

import { frontmatter as footerColumnOne } from "@/content/footer-titles/title-one.md"
import { frontmatter as footerColumnThree } from "@/content/footer-titles/title-three.md"
import { frontmatter as footerColumnFour } from "@/content/footer-titles/title-four.md"
---
<section class="bg-om_carbon_black py-12 md:py-20">
    <Container>
        <section class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-8">
            <section class="grid grid-cols-1 md:grid-cols-5 gap-12 md:gap-8">
                <section class="md:col-span-4">
                    <FooterColumnOne title={ footerColumnOne.title } />
                </section>
                <FooterColumnTwo />
            </section>
            <section class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16">
                <FooterColumnThree
                    title={ footerColumnThree.title }
                    data={ footer_column_three }
                />
                <FooterColumnFour
                    title={ footerColumnFour.title }
                    data={ footer_column_four }
                />
            </section>
        </section>
    </Container>
</section>