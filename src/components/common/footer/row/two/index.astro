---
// IMPORT ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORT ASTRO COMPONENTS
import Li from "./li/index.astro"
---
<section class="bg-om_black flex flex-col-reverse md:flex-row md:items-center justify-between gap-2 md:gap-0 py-12 md:py-4">
    <Container>
        <div class="flex flex-col md:flex-row md:items-center md:justify-center gap-4 md:gap-6">
            <Li>Privacy Policy</Li>
            <Li>Sitemap</Li>
            <Li>Accessibility</Li>
            <Li>Support</Li>
            <p class="text-center md:text-left text-white text-xs">&copy; { new Date().getFullYear() } Orbit Media Studios</p>
        </div>
    </Container>
</section>
