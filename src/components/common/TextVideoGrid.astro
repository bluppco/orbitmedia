---
// IMPORTS CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../constants/image"

// IMPORTS ASTRO ATOMS
import HeadingTwo from "../../atoms/heading/two/Vanilla.astro"
import Heading from "../../atoms/Heading.astro"
import LargeParagraph from "../../atoms/paragraph/Large.astro"
import ItalicParagraph from "../../atoms/paragraph/Italic.astro"

const {

    heading,
    title,
    description,
    src,
    video_text,
    italic_text

} = Astro.props
---
<div class="grid grid-cols-5 gap-20">
    <div class="flex flex-col justify-center gap-4 col-span-2">
        <Heading>{ heading }</Heading>
        <HeadingTwo>{ title }</HeadingTwo>
        <div class="space-y-1">
            <div class="h-[2px] w-14 bg-om_red"></div>
            <div class="h-[2px] w-14 bg-om_red"></div>
        </div>
        {

            italic_text ? <ItalicParagraph>{ description }</ItalicParagraph> : <LargeParagraph>{ description }</LargeParagraph>

        }
    </div>
    <div class="col-span-3 space-y-2">
        <div class="w-full aspect-video rounded overflow-hidden">
            <img
                src={ CDN_LINK + src + "?quality=" + IMAGE_QUALITY }
                alt=""
                class="w-full h-full"
            />
        </div>
        <p class="font-proxima_nova text-lg font-bold">{ video_text }</p>
    </div>
</div>
